    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const appContainer = document.getElementById('app-container');
            const notificationWrapper = document.getElementById('global-notification');
            const notificationContent = document.getElementById('global-notification-content');
            let notificationTimeoutId;
            const MAX_EXPIRATION_DAYS = 15;

            function showNotification(message, type = 'info', duration = 4000) {
                if (!notificationWrapper || !notificationContent || !message) return;

                const baseClasses = [
                    'max-w-lg', 'w-full', 'px-4', 'py-3', 'rounded-lg',
                    'shadow-lg', 'text-sm', 'font-medium', 'text-white', 'text-center'
                ];
                const palette = {
                    success: 'bg-green-600/90',
                    error: 'bg-red-600/90',
                    info: 'bg-slate-800/90'
                };

                notificationContent.className = `${baseClasses.join(' ')} ${palette[type] || palette.info}`;
                notificationContent.textContent = message;
                notificationWrapper.classList.remove('hidden');

                clearTimeout(notificationTimeoutId);
                if (duration > 0) {
                    notificationTimeoutId = setTimeout(() => {
                        notificationWrapper.classList.add('hidden');
                    }, duration);
                }
            }

            const homeLinkEl = document.getElementById('home-link');
            const runtimeConfig = window.CONFIG || {};

            const stripTrailingSlash = (value) => {
                if (!value) return value;
                return value.replace(/\/+$/, '');
            };

            const isLocalHostname = (hostname) => {
                if (!hostname) return false;
                const localPattern = /^(localhost|127\.|10\.|192\.168\.|172\.(1[6-9]|2[0-9]|3[0-1])\.)/;
                return localPattern.test(hostname) || hostname.endsWith('.local') || hostname.endsWith('.lan');
            };

            const resolveHomeUrl = () => {
                const { protocol, hostname, port } = window.location;
                const defaultOrigin = `${protocol}//${hostname}${port ? `:${port}` : ''}`;

                if (isLocalHostname(hostname)) {
                    return `${stripTrailingSlash(runtimeConfig.LOCAL_ORIGIN) || defaultOrigin}/`;
                }

                if (runtimeConfig.PUBLIC_ORIGIN) {
                    return `${stripTrailingSlash(runtimeConfig.PUBLIC_ORIGIN)}/`;
                }

                return `${defaultOrigin}/`;
            };

            if (homeLinkEl) {
                const homeUrl = resolveHomeUrl();
                homeLinkEl.setAttribute('href', homeUrl);
                homeLinkEl.addEventListener('click', (event) => {
                    event.preventDefault();
                    window.location.href = homeUrl;
                });
            }

            const triggerDownloadFallback = (fileId, password) => {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/api/download/${fileId}`;
                form.style.display = 'none';
                
                if (password) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'password';
                    input.value = password;
                    form.appendChild(input);
                }
                
                document.body.appendChild(form);
                form.submit();
                setTimeout(() => form.remove(), 2000);
            };

            // --- Router simple ---
            const path = window.location.pathname;
            if (path.startsWith('/share/')) {
                const fileId = path.split('/')[2];
                loadDownloadView(fileId);
            } else {
                loadUploadView();
            }

            // --- Cargar Vistas ---
            function loadUploadView() {
                const template = document.getElementById('upload-view-template').content.cloneNode(true);
                appContainer.innerHTML = '';
                appContainer.appendChild(template);
                initUploadListeners();
            }

            function loadDownloadView(fileId) {
                const template = document.getElementById('download-view-template').content.cloneNode(true);
                appContainer.innerHTML = '';
                appContainer.appendChild(template);
                initDownloadListeners(fileId);
            }

            // --- Lógica de Subida (Upload) ---
            function initUploadListeners() {
                const dropZone = document.getElementById('drop-zone');
                const fileInput = document.getElementById('file-input');
                const dropOverlay = document.getElementById('drop-overlay');
                const uploadForm = document.getElementById('upload-form');
                const uploadOptions = document.getElementById('upload-options');
                const startUploadBtn = document.getElementById('start-upload');
                const clearSelectionBtn = document.getElementById('clear-selection');
                const expiresInput = document.getElementById('expires');
                const successBanner = document.getElementById('upload-success-banner');
                const successUrlInput = document.getElementById('upload-success-url');
                const successCopyBtn = document.getElementById('upload-success-copy');
                let selectedFile = null;

                if (!dropZone) return;

                function hideSuccessBanner() {
                    if (successBanner) {
                        successBanner.classList.add('hidden');
                    }
                    if (successUrlInput) {
                        successUrlInput.value = '';
                        successUrlInput.removeAttribute('value');
                    }
                    if (successCopyBtn) {
                        successCopyBtn.innerHTML = '<i data-lucide="copy" class="icon"></i> Copiar enlace';
                        if (typeof lucide !== 'undefined') {
                            lucide.createIcons();
                        }
                    }
                }

                hideSuccessBanner();

                if (successCopyBtn && successUrlInput) {
                    successCopyBtn.addEventListener('click', () => {
                        const url = successUrlInput.value.trim();
                        if (!url) {
                            showNotification('No hay enlace disponible para copiar.', 'info', 2500);
                            return;
                        }
                        if (!navigator.clipboard || typeof navigator.clipboard.writeText !== 'function') {
                            showNotification('La API del portapapeles no esta disponible.', 'error', 2500);
                            return;
                        }
                        navigator.clipboard.writeText(url).then(() => {
                            successCopyBtn.innerHTML = '<i data-lucide="check" class="icon"></i> Copiado';
                            lucide.createIcons();
                            setTimeout(() => {
                                successCopyBtn.innerHTML = '<i data-lucide="copy" class="icon"></i> Copiar enlace';
                                lucide.createIcons();
                            }, 2000);
                            showNotification('Enlace copiado al portapapeles.', 'success', 2500);
                        }).catch(() => {
                            showNotification('No se pudo copiar el enlace.', 'error', 2500);
                        });
                    });
                }

                if (uploadForm && startUploadBtn) {
                    uploadForm.addEventListener('submit', (event) => {
                        event.preventDefault(); // Evitar recarga al presionar Enter

                        if (!selectedFile || startUploadBtn.disabled) {
                            showNotification('Selecciona un archivo antes de subir.', 'info', 2500);
                            return;
                        }

                        startUploadBtn.click();
                    });
                }

                if (expiresInput) {
                    expiresInput.addEventListener('input', () => {
                        const rawDigits = expiresInput.value.replace(/\D+/g, '');
                        if (rawDigits === '') {
                            expiresInput.value = '';
                            return;
                        }
                        let numericValue = parseInt(rawDigits, 10);
                        if (Number.isNaN(numericValue)) {
                            expiresInput.value = '';
                            return;
                        }
                        if (numericValue > MAX_EXPIRATION_DAYS) {
                            numericValue = MAX_EXPIRATION_DAYS;
                            showNotification(`La expiración máxima es de ${MAX_EXPIRATION_DAYS} días.`, 'info', 2500);
                        }
                        expiresInput.value = String(numericValue);
                    });
                }
                if (clearSelectionBtn) {
                    clearSelectionBtn.disabled = true;
                    clearSelectionBtn.classList.add("opacity-50", "pointer-events-none");
                    clearSelectionBtn.addEventListener("click", () => {
                        resetDropZone();
                    });
                }

                // Prevenir comportamientos por defecto
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, preventDefaults, false);
                    document.body.addEventListener(eventName, preventDefaults, false);
                });

                // Resaltar al arrastrar
                ['dragenter', 'dragover'].forEach(eventName => {
                    dropZone.addEventListener(eventName, () => dropOverlay.style.opacity = '1', false);
                });

                ['dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, () => dropOverlay.style.opacity = '0', false);
                });

                // Manejar archivos soltados
                dropZone.addEventListener('drop', (e) => {
                    const dt = e.dataTransfer;
                    const files = dt.files;
                    if (files.length) {
                        fileInput.files = files; // Asignar al input
                        showUploadOptions(files[0]);
                    }
                }, false);

                // Manejar selección de input
                fileInput.addEventListener('change', () => {
                    if (fileInput.files.length > 0) {
                        showUploadOptions(fileInput.files[0]);
                    }
                });

                // Mostrar opciones cuando se selecciona un archivo
                function showUploadOptions(file) {
                    selectedFile = file;
                    hideSuccessBanner();
                    
                    // Actualizar la zona de drop para mostrar el archivo seleccionado
                    const dropIcon = dropZone.querySelector('[data-lucide="upload-cloud"], [data-lucide="file-check"]');
                    const mainText = dropZone.querySelector('#drop-main-text');
                    const subText = dropZone.querySelector('#drop-sub-text');
                    
                    if (dropIcon) {
                        dropIcon.setAttribute('data-lucide', 'file-check');
                    }
                    mainText.textContent = `Archivo seleccionado: ${file.name}`;
                    subText.textContent = `${formatBytes(file.size)} • Haz clic para cambiar`;
                    
                    // Mostrar las opciones
                    uploadOptions.classList.remove('hidden');
                    if (clearSelectionBtn) {
                        clearSelectionBtn.disabled = false;
                        clearSelectionBtn.classList.remove("opacity-50", "pointer-events-none");
                    }
                    
                    // Refrescar iconos
                    lucide.createIcons();
                    
                    // Scroll suave hacia las opciones
                    uploadOptions.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }

                // Botón de iniciar subida
                startUploadBtn.addEventListener('click', async () => {
                    if (!selectedFile) return;

                    const originalBtnContent = startUploadBtn.innerHTML;
                    const mainText = dropZone.querySelector('#drop-main-text');
                    const subText = dropZone.querySelector('#drop-sub-text');
                    uploadOptions.classList.add('hidden');
                    dropZone.classList.add('opacity-60', 'pointer-events-none');
                    startUploadBtn.disabled = true;
                    startUploadBtn.innerHTML = '<i data-lucide="loader-2" class="icon animate-spin"></i> Subiendo...';
                    if (mainText && subText) {
                        mainText.textContent = `Subiendo: ${selectedFile.name}`;
                        subText.textContent = 'No cierres esta pestaña hasta finalizar.';
                    }
                    lucide.createIcons();

                    const currentFileName = selectedFile ? selectedFile.name : '';
                    let uploadSuccess = false;
                    let lastUploadResult = null;

                    try {
                        const results = await handleFiles([selectedFile]);
                        if (Array.isArray(results) && results.length > 0) {
                            lastUploadResult = results[0];
                        }
                        uploadSuccess = true;
                    } catch (err) {
                        console.error('Error global en subida:', err);
                    } finally {
                        if (uploadSuccess && lastUploadResult && lastUploadResult.downloadUrl) {
                            showNotification('Archivo listo! Encuentra el enlace generado debajo.', 'success', 4000);
                        }
                        startUploadBtn.disabled = false;
                        startUploadBtn.innerHTML = originalBtnContent;
                        resetDropZone(uploadSuccess ? { state: 'success', fileName: currentFileName, downloadUrl: lastUploadResult?.downloadUrl } : { state: 'default' });
                    }
                });

                // Función para resetear la zona de drop

function resetDropZone(options = {}) {
    const { state = 'default', fileName, downloadUrl } = options;
    const dropIcon = dropZone.querySelector('[data-lucide="file-check"], [data-lucide="upload-cloud"]');
    const mainText = dropZone.querySelector('#drop-main-text');
    const subText = dropZone.querySelector('#drop-sub-text');

    dropZone.classList.remove('opacity-60', 'pointer-events-none');
    uploadOptions.classList.add('hidden');
    selectedFile = null;
    fileInput.value = '';

    if (dropIcon) {
        dropIcon.setAttribute('data-lucide', 'upload-cloud');
    }

    if (state === 'success') {
        if (mainText) {
            mainText.textContent = 'Archivo subido correctamente';
        }
        if (subText) {
            subText.textContent = downloadUrl
                ? 'Comparte el enlace generado a continuación.'
                : 'Copia el enlace generado abajo o selecciona un nuevo archivo.';
        }
        if (successBanner && successUrlInput && downloadUrl) {
            successBanner.classList.remove('hidden');
            successUrlInput.value = downloadUrl;
            successUrlInput.setAttribute('value', downloadUrl);
        } else {
            hideSuccessBanner();
        }
    } else {
        if (mainText) {
            mainText.textContent = 'Arrastra tu archivo aquí';
        }
        if (subText) {
            subText.textContent = 'o haz clic para seleccionar';
        }
        hideSuccessBanner();
    }
    if (clearSelectionBtn) {
        clearSelectionBtn.disabled = true;
        clearSelectionBtn.classList.add('opacity-50', 'pointer-events-none');
    }

    lucide.createIcons();
}

            }
            
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            async function handleFiles(files) {
                return Promise.all([...files].map(file => uploadFile(file)));
            }

            async function uploadFile(file) {
                const uploadList = document.getElementById('upload-list');
                const template = document.getElementById('upload-item-template').content.cloneNode(true);
                const item = template.querySelector('div[role="progressbar"]');
                const fileNameEl = item.querySelector('.file-name');
                const statusTextEl = item.querySelector('.status-text');
                const progressEl = item.querySelector('progress');
                const resultLinkEl = item.querySelector('.result-link');
                const resultInput = item.querySelector('.result-link input');
                const copyButton = item.querySelector('.copy-button');
                const errorEl = item.querySelector('.error-message');

                fileNameEl.textContent = file.name;
                uploadList.prepend(item);
                
                // Scroll hacia el elemento de progreso
                setTimeout(() => {
                    item.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
                
                // --- CHUNKED UPLOAD (30MB, paralelo) ---
                const CHUNK_SIZE = 30 * 1024 * 1024; // 30MB
                const CONCURRENCY = 4;

                const passwordInput = document.getElementById('password');
                const expiresInput = document.getElementById('expires');
                const maxDownloadsInput = document.getElementById('maxDownloads');

                const password = passwordInput ? passwordInput.value : '';
                const expiresInputValue = expiresInput ? expiresInput.value.trim() : '';
                const maxDownloads = maxDownloadsInput ? maxDownloadsInput.value : '';

                let expiresDays = null;
                if (expiresInputValue !== '') {
                    const parsedExpires = parseInt(expiresInputValue, 10);
                    if (Number.isNaN(parsedExpires)) {
                        errorEl.textContent = 'La expiración debe ser un número entero.';
                        errorEl.classList.remove('hidden');
                        return;
                    }
                    expiresDays = Math.max(0, Math.min(parsedExpires, MAX_EXPIRATION_DAYS));
                }

                const expiresHours = (expiresDays !== null && expiresDays > 0) ? expiresDays * 24 : null;

                try {
                    console.log('🚀 Iniciando subida de archivo:', file.name, 'Tamaño:', file.size);
                    statusTextEl.textContent = 'Inicializando... 0%';
                    progressEl.value = 0;
                    progressEl.classList.remove('hidden');
                    // 1) init
                    const initRes = await fetch('/api/upload/init', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            fileName: file.name,
                            size: file.size,
                            mimeType: file.type || 'application/octet-stream',
                            expires: expiresHours,
                            maxDownloads: maxDownloads || null,
                            password: password || null
                        })
                    });
                    const initJson = await initRes.json();
                    console.log('📋 Init response:', initJson);
                    if (!initRes.ok) throw new Error(initJson.message || 'No se pudo iniciar la subida.');

                    const uploadId = initJson.uploadId;
                    const totalChunks = Math.ceil(file.size / CHUNK_SIZE);
                    let uploadedBytes = 0;
                    let completedChunks = 0;
                    console.log(`📦 Total chunks: ${totalChunks}, Chunk size: ${CHUNK_SIZE / 1024 / 1024}MB`);

                    // 2) subir chunks en paralelo
                    const uploadChunk = async (i) => {
                        const start = i * CHUNK_SIZE;
                        const end = Math.min(start + CHUNK_SIZE, file.size);
                        const blob = file.slice(start, end);
                        console.log(`⬆️ Subiendo chunk ${i + 1} de ${totalChunks} (${Math.round((end - start) / 1024 / 1024)}MB)`);
                        const res = await fetch(`/api/upload/chunk?uploadId=${encodeURIComponent(uploadId)}&index=${i}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/octet-stream' },
                            body: blob
                        });
                        if (!res.ok) {
                            const err = await res.json().catch(() => ({}));
                            throw new Error(err.message || `Fallo subiendo chunk ${i}`);
                        }
                        uploadedBytes += (end - start);
                        completedChunks += 1;
                        const percent = (uploadedBytes / file.size) * 100;
                        progressEl.value = percent;
                        statusTextEl.textContent = `${Math.round(percent)}% • Chunk ${completedChunks}/${totalChunks}`;
                        console.log(`✅ Chunk ${i + 1} completado. Progreso: ${Math.round(percent)}%`);
                    };

                    let cursor = 0;
                    const workers = new Array(Math.min(CONCURRENCY, totalChunks)).fill(0).map(async () => {
                        while (cursor < totalChunks) {
                            const currentIndex = cursor++;
                            await uploadChunk(currentIndex);
                        }
                    });
                    await Promise.all(workers);

                    console.log('✨ Todos los chunks subidos, finalizando...');
                    // 3) complete
                    statusTextEl.textContent = 'Finalizando...';
                    const compRes = await fetch('/api/upload/complete', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ uploadId })
                    });
                    const compJson = await compRes.json();
                    console.log('🎉 Upload completado:', compJson);
                    if (!compRes.ok) throw new Error(compJson.message || 'No se pudo finalizar la subida.');

                    statusTextEl.textContent = '100% - Completado!';
                    statusTextEl.classList.add('text-green-400');
                    resultLinkEl.classList.remove('hidden');
                    resultInput.value = compJson.downloadUrl;
                    resultInput.setAttribute('value', compJson.downloadUrl);
                    setTimeout(() => {
                        try {
                            resultInput.focus({ preventScroll: true });
                            resultInput.select();
                        } catch (focusErr) {
                            console.debug('No se pudo enfocar el campo del enlace:', focusErr);
                        }
                    }, 100);

                    copyButton.addEventListener('click', () => {
                        if (!compJson.downloadUrl) {
                            showNotification('No hay enlace disponible para copiar.', 'info', 2500);
                            return;
                        }
                        if (!navigator.clipboard || typeof navigator.clipboard.writeText !== 'function') {
                            showNotification('La API del portapapeles no esta disponible.', 'error', 2500);
                            return;
                        }
                        navigator.clipboard.writeText(compJson.downloadUrl).then(() => {
                            copyButton.innerHTML = '<i data-lucide="check" class="icon"></i> Copiado';
                            lucide.createIcons();
                            setTimeout(() => {
                                copyButton.innerHTML = '<i data-lucide="copy" class="icon"></i> Copiar enlace';
                                lucide.createIcons();
                            }, 2000);
                            showNotification('Enlace copiado al portapapeles.', 'success', 2500);
                        }).catch(() => {
                            showNotification('No se pudo copiar el enlace.', 'error', 2500);
                        });
                    });

                    return compJson;

                } catch (err) {
                    console.error('❌ Error durante la subida:', err);
                    statusTextEl.textContent = 'Error';
                    statusTextEl.classList.add('text-red-400');
                    errorEl.textContent = err.message || 'Error desconocido';
                    errorEl.classList.remove('hidden');
                    throw err;
                } finally {
                    lucide.createIcons();
                }
            }

            // --- Lógica de Descarga (Download) ---
            async function initDownloadListeners(fileId) {
                const form = document.getElementById('download-form');
                const passwordGroup = document.getElementById('password-group');
                const passwordInput = document.getElementById('download-password');
                const fileNameEl = document.getElementById('file-name');
                const fileSizeEl = document.getElementById('file-size');
                const errorEl = document.getElementById('download-error-message');
                const expiryEl = document.getElementById('expiry-info');
                const downloadBtn = document.getElementById('download-button');
                
                const clearDownloadError = () => {
                    if (errorEl) {
                        errorEl.textContent = '';
                        errorEl.classList.add('hidden');
                    }
                };
                const renderDownloadError = (message) => {
                    if (errorEl) {
                        errorEl.textContent = message;
                        errorEl.classList.remove('hidden');
                    }
                };

                try {
                    // 1. Obtener metadata
                    const metaRes = await fetch(`/api/meta/${fileId}`);
                    if (!metaRes.ok) {
                        const errData = await metaRes.json().catch(() => ({ message: 'Error al obtener metadatos.' }));
                        throw new Error(errData.message);
                    }
                    const meta = await metaRes.json();

                    clearDownloadError();
                    
                    fileNameEl.textContent = meta.fileName;
                    fileSizeEl.textContent = formatBytes(meta.size);

                    let expiryText = [];
                    if (meta.expiresAt) {
                         expiryText.push(`Expira: ${new Date(meta.expiresAt).toLocaleString()}`);
                    }
                    if (meta.downloadsLeft) {
                        expiryText.push(`Descargas restantes: ${meta.downloadsLeft}`);
                    }
                    const expiryMessage = expiryText.join(' | ');
                    expiryEl.textContent = expiryMessage;
                    if (expiryMessage.length > 0) {
                        expiryEl.classList.remove('hidden');
                    } else {
                        expiryEl.classList.add('hidden');
                    }

                    // 2. Configurar el manejador de descargas
                    if (meta.requiresPassword) {
                        // LÓGICA ANTERIOR PARA ARCHIVOS CON CONTRASEÑA
                        passwordGroup.classList.remove('hidden');
                        if (passwordInput) {
                            passwordInput.required = true;
                            passwordInput.setAttribute('name', 'password');
                        }
                        
                        form.addEventListener('submit', async (e) => {
                            e.preventDefault();
                            clearDownloadError();
                            downloadBtn.disabled = true;
                            downloadBtn.innerHTML = '<i data-lucide="loader-2" class="icon animate-spin"></i> Procesando...';
                            lucide.createIcons();
                            
                            try {
                                const payload = { password: passwordInput.value };
                                const downloadRes = await fetch(`/api/download/${fileId}`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json',
                                        'X-Download-Check': 'true'
                                    },
                                    credentials: 'include',
                                    body: JSON.stringify(payload)
                                });

                                const validation = await downloadRes.json();
                                if (!downloadRes.ok || !validation || !validation.ok) {
                                    throw new Error(validation?.message || 'No se pudo preparar la descarga.');
                                }

                                triggerDownloadFallback(fileId, passwordInput.value);
                                showNotification('Descarga iniciada.', 'success', 2500);

                            } catch (err) {
                                renderDownloadError(err.message);
                            } finally {
                                downloadBtn.disabled = false;
                                downloadBtn.innerHTML = '<i data-lucide="download" class="icon"></i> Descargar archivo';
                                lucide.createIcons();
                            }
                        });
                    } else {
                        // Lógica para archivos sin contraseña (validación y descarga POST)
                        form.addEventListener('submit', async (e) => {
                            e.preventDefault();
                            clearDownloadError();
                            downloadBtn.disabled = true;
                            downloadBtn.innerHTML = '<i data-lucide="loader-2" class="icon animate-spin"></i> Procesando...';
                            lucide.createIcons();

                            if (passwordInput) {
                                passwordInput.required = false;
                                passwordInput.removeAttribute('name');
                            }

                            try {
                                const downloadRes = await fetch(`/api/download/${fileId}`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json',
                                        'X-Download-Check': 'true'
                                    },
                                    credentials: 'include',
                                    body: JSON.stringify({})
                                });

                                const validation = await downloadRes.json();
                                if (!downloadRes.ok || !validation || !validation.ok) {
                                    throw new Error(validation?.message || 'No se pudo preparar la descarga.');
                                }

                                triggerDownloadFallback(fileId, null);
                                showNotification('Descarga iniciada.', 'success', 2500);

                            } catch (err) {
                                renderDownloadError(err.message);
                            } finally {
                                downloadBtn.disabled = false;
                                downloadBtn.innerHTML = '<i data-lucide="download" class="icon"></i> Descargar archivo';
                                lucide.createIcons();
                            }
                        });
                    }
                } catch (err) {
                    renderDownloadError(err.message);
                    form.classList.add('hidden');
                }
            }
            
            
            function formatBytes(bytes, decimals = 2) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const dm = decimals < 0 ? 0 : decimals;
                const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
            }

            function formatTimeSince(timestamp) {
                if (!timestamp) return 'poco tiempo';
                const time = typeof timestamp === 'number' ? timestamp : Number(timestamp);
                const diffMs = Date.now() - time;

                if (Number.isNaN(diffMs) || diffMs < 0) {
                    return 'instantes';
                }

                const seconds = Math.floor(diffMs / 1000);
                if (seconds < 45) return 'instantes';

                const intervals = [
                    { label: 'año', seconds: 31536000 },
                    { label: 'mes', seconds: 2592000 },
                    { label: 'semana', seconds: 604800 },
                    { label: 'día', seconds: 86400 },
                    { label: 'hora', seconds: 3600 },
                    { label: 'minuto', seconds: 60 }
                ];

                for (const interval of intervals) {
                    const count = Math.floor(seconds / interval.seconds);
                    if (count >= 1) {
                        return `${count} ${interval.label}${count !== 1 ? 's' : ''}`;
                    }
                }

                return 'instantes';
            }

