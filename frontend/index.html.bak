                            closeModal();
                            currentUser = null;
                            updateUserMenu();
                            showNotification('Tu cuenta ha sido eliminada exitosamente.', 'success');
                            loadUploadView();
                        } else {
                            errorEl.textContent = data.message;
                            errorEl.classList.remove('hidden');
                        }
                    } catch (err) {
                        errorEl.textContent = 'Error de conexión';
                        errorEl.classList.remove('hidden');
                    }
                });

                lucide.createIcons();
            }

            async function loadUserFiles() {
                const filesList = document.getElementById('user-files-list');

                try {
                    const res = await fetch('/api/user/files', {
                        credentials: 'include'
                    });

                    let data = {};
                    try {
                        data = await res.json();
                    } catch (parseErr) {
                        console.error('Error al parsear respuesta de archivos:', parseErr);
                        data = {};
                    }

                    if (!res.ok) {
                        const serverMessage = data?.message || 'Error cargando archivos';
                        throw new Error(serverMessage);
                    }

                    const files = Array.isArray(data.files) ? data.files : [];

                    const countEl = document.getElementById('dashboard-file-count');
                    const downloadsEl = document.getElementById('dashboard-total-downloads');
                    const latestEl = document.getElementById('dashboard-latest-file');

                    if (files.length === 0) {
                        if (countEl) countEl.textContent = '0';
                        if (downloadsEl) downloadsEl.textContent = '0';
                        if (latestEl) latestEl.textContent = 'Sin archivos';
                        filesList.innerHTML = '<p class="text-center text-gray-500 py-8">No has subido ningún archivo aún.</p>';
                        return;
                    }

                    const totalDownloads = files.reduce((sum, file) => sum + (file.downloadCount || 0), 0);
                    if (countEl) countEl.textContent = files.length;
                    if (downloadsEl) downloadsEl.textContent = totalDownloads;
                    if (latestEl) {
                        const latestFile = files[0];
                        latestEl.textContent = `${latestFile.originalName} • hace ${formatTimeSince(latestFile.createdAt)}`;
                    }

                    filesList.innerHTML = '';

                    files.forEach(file => {
                        const fileItem = document.createElement('div');
                        fileItem.className = 'p-4 bg-white/5 dark:bg-slate-800/30 light:bg-gray-100/50 rounded-lg border border-gray-300 dark:border-slate-700 flex justify-between items-center';

                        const expiryInfo = [];
                        if (file.expiresAt) {
                            const expired = file.expiresAt < Date.now();
                            expiryInfo.push(`<span class="${expired ? 'text-red-400' : 'text-gray-400'}">${expired ? 'Expirado' : 'Expira: ' + new Date(file.expiresAt).toLocaleDateString()}</span>`);
                        }
                        if (file.maxDownloads) {
                            expiryInfo.push(`<span class="text-gray-400">${file.downloadCount}/${file.maxDownloads} descargas</span>`);
                        }

                        fileItem.innerHTML = `
                            <div class="flex-1">
                                <p class="font-medium dark:text-white light:text-gray-800">${file.originalName}</p>
                                <p class="text-sm text-gray-400">${formatBytes(file.size)} • Subido hace ${formatTimeSince(file.createdAt)}</p>
                                <p class="text-xs text-red-400 mt-1">Descargas: ${file.downloadCount || 0}</p>
                                ${expiryInfo.length > 0 ? '<p class="text-xs mt-1 text-gray-400">' + expiryInfo.join(' • ') + '</p>' : ''}
                            </div>
                            <div class="flex gap-2">
                                <button class="copy-link-btn px-3 py-2 bg-red-600 hover:bg-red-700 text-white text-sm rounded-lg transition-colors" data-id="${file.id}">
                                    <i data-lucide="copy" class="icon" style="width:1rem; height:1rem;"></i>
                                </button>
                                <button class="delete-file-btn px-3 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm rounded-lg transition-colors" data-id="${file.id}">
                                    <i data-lucide="trash-2" class="icon" style="width:1rem; height:1rem;"></i>
                                </button>
                            </div>
                        `;

                        filesList.appendChild(fileItem);

                        // Botón copiar enlace
                        fileItem.querySelector('.copy-link-btn').addEventListener('click', () => {
                            const url = `${window.location.origin}/share/${file.id}`;
                            navigator.clipboard.writeText(url).then(() => {
                                const btn = fileItem.querySelector('.copy-link-btn');
                                btn.innerHTML = '<i data-lucide="check" class="icon" style="width:1rem; height:1rem;"></i>';
                                setTimeout(() => {
                                    btn.innerHTML = '<i data-lucide="copy" class="icon" style="width:1rem; height:1rem;"></i>';
                                    lucide.createIcons();
                                }, 2000);
                                lucide.createIcons();
                            });
                        });

                        // Botón eliminar archivo
                        fileItem.querySelector('.delete-file-btn').addEventListener('click', async () => {
                            if (!confirm('¿Estás seguro de eliminar este archivo?')) return;

                            try {
                                const res = await fetch(`/api/user/files/${file.id}`, {
                                    method: 'DELETE',
                                    credentials: 'include'
                                });

                                if (res.ok) {
                                    fileItem.remove();
                                    if (filesList.children.length === 0) {
                                        filesList.innerHTML = '<p class="text-center text-gray-500 py-8">No has subido ningún archivo aún.</p>';
                                    }
                                    showNotification('Archivo eliminado correctamente.', 'success');
                                } else {
                                    const data = await res.json();
                                    showNotification(data?.message || 'No se pudo eliminar el archivo.', 'error');
                                }
                            } catch (err) {
                                showNotification('Error de conexión', 'error');
                            }
                        });
                    });

                    lucide.createIcons();

                } catch (err) {
                    console.error('Error al cargar archivos del usuario:', err);
                    const message = err.message && err.message.toLowerCase().includes('autoriz')
                        ? 'Tu sesión ha expirado. Inicia sesión nuevamente para ver tus archivos.'
                        : 'Hubo un problema al cargar tus archivos. Por favor, intenta de nuevo.';
                    filesList.innerHTML = `<p class="text-center text-red-500 py-8">${message}</p>`;
                    const countEl = document.getElementById('dashboard-file-count');
                    const downloadsEl = document.getElementById('dashboard-total-downloads');
                    const latestEl = document.getElementById('dashboard-latest-file');
                    if (countEl) countEl.textContent = '—';
                    if (downloadsEl) downloadsEl.textContent = '—';
                    if (latestEl) latestEl.textContent = 'Sin datos';
                }
            }
            
            // --- Lógica del Tema (Claro/Oscuro) ---
            const themeToggle = document.getElementById('themeToggle');
            
            function setTheme(isDark) {
                const htmlEl = document.documentElement;
                if (isDark) {
                    htmlEl.classList.remove('light');
                    htmlEl.classList.add('dark');
                    htmlEl.setAttribute('data-theme', 'dark');
                    localStorage.theme = 'dark';
                } else {
                    htmlEl.classList.remove('dark');
                    htmlEl.classList.add('light');
                    htmlEl.setAttribute('data-theme', 'light');
                    localStorage.theme = 'light';
                }
                lucide.createIcons(); // Refrescar iconos
            }
            
            // Event listener para el toggle
            themeToggle.addEventListener('click', () => {
                const isDark = document.documentElement.classList.contains('dark');
                setTheme(!isDark);
            });

            // Aplicar tema guardado al cargar
            if (localStorage.theme === 'dark') {
                setTheme(true); // Tema oscuro
            } else {
                // Por defecto claro
                setTheme(false); // Tema claro
            }

            // --- Renderizar Iconos Lucide ---
            lucide.createIcons();
        });
    </script>
</body>
</html>





