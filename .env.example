# Configuración del Servidor
PORT=3000
NODE_ENV=production

# URLs de la aplicación (Importante para la detección LAN/WAN)
# LOCAL_ORIGIN: URL para acceso local (ej. http://192.168.1.100:3000)
# PUBLIC_ORIGIN: URL para acceso público (ej. https://mi-dominio.com)
LOCAL_ORIGIN=http://localhost:3000
PUBLIC_ORIGIN=http://localhost:3000

# Seguridad (¡CAMBIAR EN PRODUCCIÓN!)
# Generar una cadena larga y aleatoria para firmar las sesiones
SESSION_SECRET=cambiar_esto_por_una_cadena_secreta_larga_y_aleatoria
# Secreto para hashear contraseñas de archivos (opcional, usa SESSION_SECRET si no se define)
PASSWORD_SECRET=

# Configuración de Cookies
# SESSION_COOKIE_SECURE=true # Descomentar si se usa HTTPS
# SESSION_COOKIE_SAMESITE=lax

# Almacenamiento
# Ruta absoluta o relativa donde se guardarán los archivos
STORAGE_PATH=./uploads
# Límite de tamaño de archivo en bytes (ej. 10GB = 10737418240)
MAX_FILE_SIZE=10737418240

# Base de Datos
SESSION_DB_NAME=sessions.sqlite

# Configuración de Correo (SMTP) para recuperación de contraseñas
# Si no se configura, los enlaces de recuperación se mostrarán en la consola del servidor
SMTP_HOST=smtp.ejemplo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_usuario
SMTP_PASS=tu_contraseña
SMTP_FROM="Sendu <noreply@tu-dominio.com>"
