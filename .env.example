# ===========================================
# SENDU - Plantilla de Configuración
# ===========================================
# Copia este archivo a .env y configura los valores

# Entorno
NODE_ENV=production

# Puerto del servidor
PORT=3000

# --- ORÍGENES (Cloudflare) ---
# URL pública (tu dominio con HTTPS via Cloudflare)
PUBLIC_ORIGIN=https://sendu.lat
# URL local para desarrollo
LOCAL_ORIGIN=http://localhost:3000

# --- ALMACENAMIENTO ---
STORAGE_PATH=./uploads

# --- SECRETOS DE SEGURIDAD ---
# ⚠️ IMPORTANTE: Genera secretos únicos y seguros
# Puedes usar: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
PASSWORD_SECRET=CAMBIAR_POR_SECRETO_SEGURO_32_BYTES
SESSION_SECRET=CAMBIAR_POR_OTRO_SECRETO_SEGURO_32_BYTES

# --- CONFIGURACIÓN DE COOKIES ---
SESSION_COOKIE_NAME=sendu.sid
# Usa true si tienes HTTPS (Cloudflare lo provee)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# --- LÍMITES ---
# Tamaño máximo de archivo en bytes (100GB)
MAX_FILE_SIZE=107374182400

# --- BASE DE DATOS ---
SESSION_DB_NAME=sessions.sqlite

# --- CORREO SMTP ---
# Configura tu proveedor SMTP (Brevo, SendGrid, etc.)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_usuario_smtp
SMTP_PASS=tu_contraseña_smtp
SMTP_FROM="Sendu <no-reply@sendu.lat>"
